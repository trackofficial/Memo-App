<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/black</item>
        <item name="android:colorSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="materialCalendarStyle">@color/black</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="RoundedCornersOneSide">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">18dp</item>
        <item name="cornerSizeBottomRight">18dp</item>
        <item name="cornerSizeTopLeft">18dp</item>
        <item name="cornerSizeBottomLeft">18dp</item>
    </style>
    <style name="RoundedBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundedBottomSheet</item>
    </style>

    <style name="RoundedBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/form_for_select_block</item>
    </style>
    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:datePickerStyle">@style/CustomDatePicker</item>
    </style>

    <style name="CustomDatePicker" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="colorAccent">@color/background_color_light</item>
        <item name="android:background">@color/background_color_light</item>
        <item name="android:headerBackground">@color/background_color_light</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
</resources>