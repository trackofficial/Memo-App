<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/form_for_select_block"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Выберите изображение"
        android:textSize="18sp"
        android:paddingBottom="8dp" />
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Учеба"
        android:textSize="18sp"/>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:columnCount="7">

        <!-- Добавим ImageView для каждого изображения -->
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"></Space>

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">
            <ImageView
                android:src="@drawable/img_memo_1"
                android:id="@+id/imageOption1"
                android:adjustViewBounds="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"></Space>

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">
            <ImageView
                android:src="@drawable/img_memo_2"
                android:id="@+id/imageOption2"
                android:adjustViewBounds="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"></Space>

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">
            <ImageView
                android:src="@drawable/img_memo_3"
                android:id="@+id/imageOption3"
                android:adjustViewBounds="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"></Space>
        <!-- Повторите для всех изображений -->

    </GridLayout>
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Путешествие"
            android:textSize="18sp"/>
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:columnCount="7">

            <!-- Добавим ImageView для каждого изображения -->
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"></Space>

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">
                <ImageView
                    android:src="@drawable/img_memo_4"
                    android:id="@+id/imageOption4"
                    android:adjustViewBounds="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"></Space>

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">
                <ImageView
                    android:src="@drawable/img_memo_5"
                    android:id="@+id/imageOption5"
                    android:adjustViewBounds="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"></Space>

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">
                <ImageView
                    android:src="@drawable/img_memo_6"
                    android:id="@+id/imageOption6"
                    android:adjustViewBounds="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"></Space>
            <!-- Повторите для всех изображений -->

        </GridLayout>
    </LinearLayout>

    <Button
        android:id="@+id/buttonSelectFromGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выбрать из галереи"
        android:layout_marginTop="16dp" />
</LinearLayout>