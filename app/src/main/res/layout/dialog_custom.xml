<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вы уверены?"
        android:textSize="18sp"
        android:textColor="@color/background_color_light"
        android:fontFamily="@font/tilda_semibold"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/dialogMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Это действие нельзя отменить."
        android:textSize="16sp"
        android:textColor="@color/background_color_light"
        android:fontFamily="@font/tilda_medium"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Да"
            android:fontFamily="@font/tilda_medium"
            android:background="@drawable/button_for_dialog_white"
            android:textColor="@color/new_color_black"
            android:layout_marginEnd="8dp" />

        <Button
            android:fontFamily="@font/tilda_medium"
            android:background="@drawable/button_for_dialog"
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Нет"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>