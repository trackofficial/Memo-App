<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_screen"
    android:background="@color/background_color_light">
    <FrameLayout
        android:id="@+id/archivedBanner"
        android:layout_width="wrap_content"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:translationY="-100dp"
        android:visibility="gone"
        android:background="@drawable/round_from_black"
        android:elevation="10dp">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/complete_icon"
                android:layout_gravity="center_vertical"></ImageView>
            <TextView
                android:layout_marginLeft="4dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task complete"
                android:textSize="13dp"
                android:fontFamily="@font/tildasans_semibold"
                android:textColor="@color/white" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_marginLeft="15dp"
                android:id="@+id/blockelement"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:background="@drawable/form_for_navigation_bar"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:id="@+id/mainbutton"
                    android:background="@color/color_none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </ImageButton>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Notes"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/tildasans_semibold">
                    </TextView>
                    <ImageView
                        android:rotation="90"
                        android:layout_marginLeft="6dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/arrow">
                    </ImageView>
                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp">
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/history_button_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/history_button"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:background="@drawable/history_button">
                    </ImageButton>
                </LinearLayout>
                <ImageButton
                    android:visibility="gone"
                    android:layout_marginLeft="7dp"
                    android:id="@+id/settings_button"
                    android:background="@drawable/settings_button"
                    android:layout_width="34dp"
                    android:layout_height="34dp">
                </ImageButton>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:background="@color/background_color_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingBottom="12dp"
            android:orientation="vertical">

            <!-- Сетка дат календаря -->
            <GridLayout
                android:layout_marginTop="6dp"
                android:id="@+id/weekCalendarGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="1"
                android:columnCount="7"
                android:clipToPadding="false">
                <!-- Программно добавим числа -->
            </GridLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <!--Блок с изображением-->
            <LinearLayout
                android:visibility="gone"
                android:orientation="vertical"
                android:id="@+id/block_with_image"
                android:layout_marginTop="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/havenoplans_image">
                </ImageView>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_gravity="bottom|center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="There's no tasks"
                    android:textSize="18dp"
                    android:textColor="@color/new_color_grey_for_title"
                    android:fontFamily="@font/tildasans_bold">
                </TextView>
                <TextView
                    android:layout_gravity="bottom|center"
                    android:layout_width="120sp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="You can add task using this button"
                    android:textSize="11dp"
                    android:textColor="@color/new_color_grey_for_imageblock"
                    android:fontFamily="@font/tildasans_bold">
                </TextView>
                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:layout_width="65dp"
                    android:layout_height="160dp"
                    android:background="@drawable/arrow_line">
                </ImageView>
            </LinearLayout>
            <!-- ScrollView для контента -->
            <ScrollView
                android:id="@+id/main_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadeScrollbars="false"
                android:scrollbars="none">
                <LinearLayout
                    android:id="@+id/undatedContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Здесь программно добавляемый контент -->
                </LinearLayout>
            </ScrollView>

            <!-- Неподвижный блок с кнопками -->
            <LinearLayout
                android:id="@+id/navigate_block"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:layout_gravity="bottom">
                <LinearLayout
                    android:id="@+id/addblock_place"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:orientation="horizontal">
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"></Space>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:background="@drawable/form_for_main_button"
                            android:id="@+id/create_button"
                            android:layout_width="76dp"
                            android:layout_height="32dp"></ImageButton>
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/add_icon"></ImageView>
                    </FrameLayout>
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"></Space>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="62dp"
                    android:gravity="center"
                    android:background="@drawable/form_for_navigation_bar">

                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical">
                        <FrameLayout
                            android:layout_marginRight="10dp"
                            android:id="@+id/main_button_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/form_for_button_simpleblock">

                            <FrameLayout
                                android:id="@+id/main_button_place"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal">

                                <ImageButton
                                    android:id="@+id/main_button"
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:background="@drawable/main_button_pl" />
                            </FrameLayout>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_marginRight="10dp"
                            android:id="@+id/calendar_button_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent">

                            <FrameLayout
                                android:id="@+id/calendar_button_place"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal">

                                <ImageButton
                                    android:id="@+id/statistic_button"
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:background="@drawable/calendar_button"
                                    android:alpha="0.5" />
                            </FrameLayout>
                        </FrameLayout>
                        <FrameLayout
                            android:id="@+id/focus_button_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent">

                            <FrameLayout
                                android:id="@+id/focus_button_place"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal">

                                <ImageButton
                                    android:id="@+id/focus_button"
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:background="@drawable/focus_button"
                                    android:alpha="0.5" />
                            </FrameLayout>
                        </FrameLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</FrameLayout>