<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_light"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addnote">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/for_image_add_edit"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/noteImageView"
                        android:layout_width="match_parent"
                        android:layout_height="205sp"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/RoundedCornersOneSide" />
                    <LinearLayout
                        android:layout_marginBottom="7dp"
                        android:gravity="center_vertical"
                        android:paddingRight="6dp"
                        android:paddingLeft="6dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginLeft="4dp"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:visibility="gone"
                            android:id="@+id/editTextTime"
                            android:hint=""
                            android:inputType="time"
                            android:textColor="@color/white"
                            android:fontFamily="@font/tilda_medium"
                            android:paddingRight="6dp"
                            android:paddingLeft="6dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:background="@drawable/form_for_minibutton"
                            android:layout_width="wrap_content"
                            android:textColorHint="@color/background_color_for_hint"
                            android:layout_height="wrap_content"
                            android:maxLength="5"
                            android:textSize="15dp"
                            android:layout_gravity="center"/>
                        <FrameLayout
                            android:layout_gravity="center"
                            android:visibility="visible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginLeft="6dp"
                            android:background="@drawable/form_for_minibutton">
                            <!-- Текст с выбранной датой -->
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:paddingRight="6dp"
                                android:paddingLeft="6dp"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp"
                                android:visibility="gone"
                                android:id="@+id/textViewSelectedDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:fontFamily="@font/tilda_medium"
                                android:textSize="15dp"
                                android:textColor="@color/white"
                                android:clickable="true"
                                android:focusable="true" />

                            <!-- Кнопка вызова календаря (если нужна) -->
                            <ImageButton
                                android:layout_gravity="center"
                                android:id="@+id/buttonOpenCalendar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/back_none"
                                android:background="@null" />
                        </FrameLayout>
                    </LinearLayout>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="34dp"
                    android:background="@drawable/form_for_minibutton"
                    android:layout_height="34dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginRight="21dp"
                    android:layout_marginBottom="7dp">
                <ImageButton
                    android:layout_marginLeft="0.25dp"
                    android:layout_gravity="center"
                    android:layout_width="18dp"
                    android:background="@drawable/export_image_pin"
                    android:layout_height="18dp"
                    android:id="@+id/buttonSelectImage">
                </ImageButton>
                </FrameLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/block_for_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextNoteContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/form_for_new_edit_text"
                    android:fontFamily="@font/tilda_semibold"
                    android:gravity="top|start"
                    android:hint="Введите заметку"
                    android:textColor="@color/black"
                    android:textColorHint="@color/background_color_for_hint"
                    android:textSize="26dp" />
            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_marginLeft="15dp"
                android:fadeScrollbars="false"
                android:scrollbars="none"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:background="@drawable/form_for_new_edit_text"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:layout_marginTop="2dp">
                <EditText
                    android:paddingBottom="30dp"
                    android:textColor="@color/black"
                    android:id="@+id/editAddText"
                    android:hint="Введите описание"
                    android:inputType="textMultiLine"
                    android:background="@drawable/form_for_new_edit_text"
                    android:textColorHint="@color/background_color_for_hint"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/tilda_medium"
                    android:layout_height="wrap_content"/>
            </ScrollView>
        </LinearLayout>

        <View
            android:id="@+id/scrollIndicator"
            android:layout_width="100dp"
            android:layout_height="8dp"
            android:visibility="gone"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:layout_gravity="bottom|center"
            android:background="@drawable/form_for_navigation_bar"></View>
        <LinearLayout
            android:id="@+id/navigate_block"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="17dp"
            android:gravity="center"
            android:layout_gravity="bottom">
            <FrameLayout
                android:id="@+id/blockelement"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="5dp"
                android:background="@drawable/form_for_navigation_bar"
                android:layout_height="30dp">
                <Button
                    android:id="@+id/buttonshowbaroptions"
                    android:background="@color/color_none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Button>
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/add_pin">
                    </ImageView>
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Add Elements"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/tilda_medium">
                </TextView>
                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:gravity="center"
                android:background="@drawable/form_for_navigation_bar">

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/block_createblock_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/form_for_main_button">
                        <Button
                            android:id="@+id/buttonSave"
                            android:layout_width="wrap_content"
                            android:background="@color/color_none"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/add_icon"/>
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</LinearLayout>