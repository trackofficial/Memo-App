<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_light"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addnote">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/for_image_add_edit"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/noteImageView"
                        android:layout_width="match_parent"
                        android:layout_height="205sp"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/RoundedCornersOneSide" />
                    <LinearLayout
                        android:layout_marginBottom="7dp"
                        android:gravity="center_vertical"
                        android:paddingRight="6dp"
                        android:paddingLeft="6dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginLeft="4dp"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_gravity="center"
                            android:visibility="visible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginLeft="6dp"
                            android:background="@drawable/form_for_minibutton">
                            <!-- Текст с выбранной датой -->
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:paddingRight="6dp"
                                android:paddingLeft="6dp"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp"
                                android:visibility="gone"
                                android:id="@+id/textViewSelectedDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:fontFamily="@font/tilda_medium"
                                android:textSize="15dp"
                                android:textColor="@color/white"
                                android:clickable="true"
                                android:focusable="true" />

                            <!-- Кнопка вызова календаря (если нужна) -->
                            <ImageButton
                                android:id="@+id/buttonOpenCalendar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:src="@drawable/back_none" />
                        </FrameLayout>
                    </LinearLayout>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="34dp"
                    android:background="@drawable/form_for_minibutton"
                    android:layout_height="34dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginRight="21dp"
                    android:layout_marginBottom="7dp">
                <ImageButton
                    android:layout_gravity="center"
                    android:layout_width="24dp"
                    android:background="@drawable/export_image_pin"
                    android:layout_height="24dp"
                    android:id="@+id/buttonSelectImage">
                </ImageButton>
                </FrameLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/block_for_edittext">
                <EditText
                    android:id="@+id/editTextNoteContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/form_for_new_edit_text"
                    android:fontFamily="@font/tilda_semibold"
                    android:gravity="top|start"
                    android:hint="Write Title"
                    android:textColor="@color/black"
                    android:textColorHint="@color/background_color_for_hint"
                    android:textSize="26dp"/>
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:id="@+id/goalButtonGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="14dp">
                    <FrameLayout
                        android:id="@+id/bl1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:background="@drawable/form_for_timeblock">
                        <Button
                            android:background="@color/none"
                            android:id="@+id/buttonGoalWork"
                            android:layout_width="40dp"
                            android:layout_height="20dp"/>
                        <TextView
                            android:text="Work"
                            android:id="@+id/dateblock1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/tildasans_semibold"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>

                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/bl2"
                        android:layout_marginLeft="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:background="@drawable/form_for_timeblock">
                        <Button
                            android:background="@color/none"
                            android:id="@+id/buttonGoalStudy"
                            android:layout_width="48dp"
                            android:layout_height="20dp"/>
                        <TextView
                            android:text="Study"
                            android:id="@+id/dateblock2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/tildasans_semibold"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>

                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/bl3"
                        android:layout_marginLeft="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:background="@drawable/form_for_timeblock">
                        <Button
                            android:background="@color/none"
                            android:id="@+id/buttonGoalPersonal"
                            android:layout_width="60dp"
                            android:layout_height="20dp"/>
                        <TextView
                            android:text="Personal"
                            android:id="@+id/dateblock3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/tildasans_semibold"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>

                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/bl4"
                        android:layout_marginLeft="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:background="@drawable/form_for_timeblock">
                        <Button
                            android:background="@color/none"
                            android:id="@+id/buttonGoalOther"
                            android:layout_width="40dp"
                            android:layout_height="20dp"/>
                        <TextView
                            android:text="Other"
                            android:id="@+id/dateblock4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/tildasans_semibold"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>

                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/icon_time"/>
                <EditText
                    android:id="@+id/editTextTime"
                    android:hint="Write time"
                    android:inputType="time"
                    android:textColor="@color/black"
                    android:fontFamily="@font/tildasans_semibold"

                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:background="@color/none"
                    android:layout_width="wrap_content"
                    android:textColorHint="@color/background_color_for_hint"
                    android:layout_height="wrap_content"
                    android:maxLength="5"
                    android:textSize="16dp"/>
                </LinearLayout>

            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_marginLeft="15dp"
                android:fadeScrollbars="false"
                android:scrollbars="none"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:background="@drawable/form_for_new_edit_text"
                android:layout_height="wrap_content"
                android:gravity="top|start">
                <EditText
                    android:paddingBottom="30dp"
                    android:textColor="@color/black"
                    android:id="@+id/editAddText"
                    android:hint="Create Description"
                    android:inputType="textMultiLine"
                    android:background="@drawable/form_for_new_edit_text"
                    android:textColorHint="@color/background_color_for_hint"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/tilda_medium"
                    android:layout_height="wrap_content"/>
            </ScrollView>
        </LinearLayout>

        <View
            android:id="@+id/scrollIndicator"
            android:layout_width="100dp"
            android:layout_height="8dp"
            android:visibility="gone"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:layout_gravity="bottom|center"
            android:background="@drawable/form_for_navigation_bar"></View>
        <LinearLayout
            android:id="@+id/navigate_block"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="12dp">
            <FrameLayout
                android:layout_marginBottom="8dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/buttonSelectDateblock"
                android:background="@drawable/form_for_navigation_bar">
                <ImageButton
                    android:id="@+id/buttonSelectDate"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/calendar_button_note" />
            </FrameLayout>
            <FrameLayout
                android:layout_marginBottom="8dp"
                android:id="@+id/block_createblock"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/form_for_navigation_bar">
                <Button
                    android:id="@+id/buttonshowbaroptions"
                    android:layout_width="wrap_content"
                    android:background="@color/none"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/add_icon"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:gravity="start"
                android:background="@drawable/form_for_navigation_bar">

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/block_createblock_main"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@drawable/form_for_navigation_bar">
                        <Button
                            android:id="@+id/buttonSave"
                            android:layout_width="wrap_content"
                            android:background="@color/none"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/save_button"/>
                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>