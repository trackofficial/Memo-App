<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addnote"
    android:paddingTop="16dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/songer"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:text="Создайте заметку"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <EditText
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/block_for_edit_text"
        android:id="@+id/editTextNoteContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите заметку"
        android:gravity="top|start"
        android:layout_marginTop="60dp"
        />
                <EditText
                    android:id="@+id/editTextTime"
                    android:hint="Введите время"
                    android:inputType="time"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/block_for_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="5"
                    android:gravity="top|start"
                    android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/editAddText"
                android:hint="Введите описание"
                android:inputType="text"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/block_for_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="200"
                android:gravity="top|start"
                android:layout_marginTop="10dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <ImageButton
                    android:id="@+id/buttonSelectDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:background="@drawable/form_for_other_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Выберете дату"
                    android:layout_gravity="center"
                    android:textSize="14dp"
                    android:fontFamily="@font/lineyka"
                    android:textColor="@color/background_color_light"></TextView>
            </FrameLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Насколько важно это событие?"
                    android:fontFamily="@font/songer"
                    android:textColor="@color/text_color_main_button"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:background="@drawable/background_for_color_block"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/background_1_small"></View>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Очень важно"
                            android:textColor="@color/text_color_for_other"
                            android:fontFamily="@font/lineyka"
                            android:textSize="20dp"></TextView>
                        <ImageButton
                            android:background="@drawable/back_none"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/buttonColor1"></ImageButton>

                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/background_for_color_block"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/background_2_small"></View>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Важно"
                            android:textColor="@color/text_color_for_other"
                            android:fontFamily="@font/lineyka"
                            android:textSize="20dp"></TextView>
                        <ImageButton
                            android:background="@drawable/back_none"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/buttonColor2"></ImageButton>

                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/background_for_color_block"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/background_3_small"></View>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Не сильно"
                            android:textColor="@color/text_color_for_other"
                            android:fontFamily="@font/lineyka"
                            android:textSize="20dp"></TextView>
                        <ImageButton
                            android:background="@drawable/back_none"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/buttonColor3"></ImageButton>

                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/background_for_color_block"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/background_4_small"></View>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Неважно"
                            android:textColor="@color/text_color_for_other"
                            android:fontFamily="@font/lineyka"
                            android:textSize="20dp"></TextView>
                        <ImageButton
                            android:background="@drawable/back_none"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/buttonColor4"></ImageButton>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:layout_marginRight="16dp"
            android:background="@drawable/form_for_navigation_bar">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">
                <ImageButton
                    android:background="@drawable/form_for_other_button"
                    android:id="@+id/buttonSave"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сохранить"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:fontFamily="@font/lineyka"
                    android:textColor="@color/background_color_light"></TextView>
            </FrameLayout>
        </FrameLayout>


    </FrameLayout>

</LinearLayout>